{
  "extends": "eslint:recommended",
  "env":{
    "jquery": true,
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": "off",
    "no-console":"off",
    "no-unused-vars":"off",
//    "no-unreachable":"off",
    "no-redeclare":"warn",
    "no-var": 0,
    "comma-spacing": [1, {
      "before": false,
      "after": true
    }]
  }
}